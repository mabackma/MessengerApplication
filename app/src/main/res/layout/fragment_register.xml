<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/black"
    tools:context=".RegisterFragment">

    <TextView
        android:id="@+id/text_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:textColor="@color/purple_200"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Enter your e-mail address"
        android:textColorHint="#808080"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        style="@style/EditTextWithUnderline"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textViewPassWd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/purple_200"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Enter your password"
        android:textColorHint="#808080"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        style="@style/EditTextWithUnderline"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textViewPassWdCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Re-enter password"
        android:textColor="@color/purple_200"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText_password_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Enter your password again"
        android:textColorHint="#808080"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        style="@style/EditTextWithUnderline"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textViewMatchingPasswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passwords do not match"
        android:textColor="#FF0000"
        android:textSize="16dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/button_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="REGISTER" />

</LinearLayout>